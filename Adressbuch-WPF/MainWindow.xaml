<Window x:Class="Adressbuch_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adressbuch_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0">Vorname</Label>
        <Label Grid.Column="0" Grid.Row="1">Name</Label>
        <Label Grid.Column="0" Grid.Row="2">Str</Label>
        <Label Grid.Column="0" Grid.Row="3">Ort</Label>
        <Label Grid.Column="0" Grid.Row="4">Land</Label>
        <Label Grid.Column="0" Grid.Row="5">EMail</Label>
        <Label Grid.Column="0" Grid.Row="6">Index</Label>
        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding SelectedForeName}"/>
        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding SelectedLastName}"/>
        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding SelectedStreet}"/>
        <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding SelectedTown}"/>
        <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding SelectedCountry}"/>
        <TextBox Grid.Column="1" Grid.Row="5"/>
        <TextBox Grid.Column="1" Grid.Row="6" Text="{Binding SelectedIndex}"/>
        <ListView x:Name="lvAddress" Grid.Column="2" Grid.Row="0" Grid.RowSpan="6" SelectedIndex="{Binding SelectedIndex}" ItemsSource="{Binding EntryList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ForeName}" Width="100"/>
                        <TextBlock Text="{Binding LastName}" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="7">
            <Button Content="Add" Command="{Binding AddUser}" />
            <Button Content="Modify" Command="{Binding ModifyUser}" CommandParameter="{Binding ElementName=lvAddress, Path=SelectedIndex}"/>
            <Button Content="Get" Command="{Binding GetUser}" CommandParameter="{Binding ElementName=lvAddress, Path=SelectedIndex}"/>
        </StackPanel>
    </Grid>
</Window>
