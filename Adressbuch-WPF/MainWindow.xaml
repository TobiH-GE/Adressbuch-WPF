<Window x:Class="Adressbuch_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adressbuch_WPF"
        mc:Ignorable="d"
        Title="ContactManager by TobiH" Height="500" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="0" Margin="3">contact details</Label>
        <Label Grid.Column="0" Grid.Row="1" Margin="3">Index</Label>
        <Label Grid.Column="0" Grid.Row="2" Margin="3">Vorname</Label>
        <Label Grid.Column="0" Grid.Row="3" Margin="3">Name</Label>
        <Label Grid.Column="0" Grid.Row="4" Margin="3">Str</Label>
        <Label Grid.Column="0" Grid.Row="5" Margin="3">Ort</Label>
        <Label Grid.Column="0" Grid.Row="6" Margin="3">Land</Label>
        <Label Grid.Column="0" Grid.Row="7" Margin="3">EMail</Label>

        <Label Grid.Column="2" Grid.Row="0" Margin="3">all contacts</Label>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="3" Text="{Binding SelectedIndex}"/>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="3" Text="{Binding SelectedForeName}"/>
        <TextBox Grid.Column="1" Grid.Row="3" Margin="3" Text="{Binding SelectedLastName}"/>
        <TextBox Grid.Column="1" Grid.Row="4" Margin="3" Text="{Binding SelectedStreet}"/>
        <TextBox Grid.Column="1" Grid.Row="5" Margin="3" Text="{Binding SelectedTown}"/>
        <TextBox Grid.Column="1" Grid.Row="6" Margin="3" Text="{Binding SelectedCountry}"/>
        <TextBox Grid.Column="1" Grid.Row="7" Margin="3"/>
        <ListView x:Name="lvAddress" Grid.Column="2" Grid.Row="1" Grid.RowSpan="6" Margin="3" SelectedIndex="{Binding SelectedIndex}" ItemsSource="{Binding EntryList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ForeName}" Width="100"/>
                        <TextBlock Text="{Binding LastName}" Width="100"/>
                        <TextBlock Text="{Binding Country}" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="8">
            <Button Content="Add" Command="{Binding AddUser}" />
            <Button Content="Modify" Command="{Binding ModifyUser}" CommandParameter="{Binding ElementName=lvAddress, Path=SelectedIndex}"/>
            <Button Content="Get" Command="{Binding GetUser}" CommandParameter="{Binding ElementName=lvAddress, Path=SelectedIndex}"/>
        </StackPanel>
    </Grid>
</Window>
